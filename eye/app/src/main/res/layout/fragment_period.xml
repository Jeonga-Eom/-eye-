<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/time_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/TextView_lens_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="지정렌즈 이름"
        android:padding="10dp"
        />
    <TextView
        android:id="@+id/TextView_lens_L"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="L: "
        android:layout_below="@+id/TextView_lens_name"
        android:padding="10dp"/>
    <TextView
        android:id="@+id/TextView_lens_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="왼쪽 값"
        android:layout_below="@+id/TextView_lens_name"
        android:layout_toRightOf="@+id/TextView_lens_L"
        android:padding="10dp"/>
    <TextView
        android:id="@+id/TextView_lens_R"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="R: "
        android:layout_below="@+id/TextView_lens_L"
        android:padding="10dp"/>
    <TextView
        android:id="@+id/TextView_lens_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="오른쪽 값"
        android:layout_below="@+id/TextView_lens_L"
        android:layout_toRightOf="@+id/TextView_lens_R"
        android:padding="10dp"/>

    <Button
        android:id="@+id/Button_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="수정"
        android:layout_below="@+id/TextView_lens_R"
        android:layout_toLeftOf="@+id/Button_delete"/>
    <Button
        android:id="@+id/Button_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="삭제"
        android:layout_below="@+id/TextView_lens_R"
        android:layout_alignParentRight="true"/>

</RelativeLayout>