<?xml version="1.0" encoding="utf-8"?>

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/Layout_lens_"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">

    <TextView
        android:id="@+id/TextView_lens_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LENS"
        android:padding="10dp"
        />
    <TextView
        android:id="@+id/TextView_lens_L"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="L: "
        android:layout_below="@+id/TextView_lens_name"
        android:padding="10dp"
        />
    <TextView
        android:id="@+id/TextView_lens_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="왼쪽 값"
        android:layout_below="@+id/TextView_lens_name"
        android:layout_toRightOf="@+id/TextView_lens_L"
        android:padding="10dp"
        />
    <TextView
        android:id="@+id/TextView_lens_R"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="R: "
        android:layout_below="@+id/TextView_lens_L"
        android:padding="10dp"
        />
    <TextView
        android:id="@+id/TextView_lens_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="오른쪽 값"
        android:layout_below="@+id/TextView_lens_L"
        android:layout_toRightOf="@+id/TextView_lens_R"
        android:padding="10dp"
        />

</RelativeLayout>