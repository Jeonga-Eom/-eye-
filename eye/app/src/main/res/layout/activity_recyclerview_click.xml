<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:padding="20dp">
        <ImageView
            android:id="@+id/imageview"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/eye" />

        <TextView
            android:id="@+id/lensname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:text="렌즈모델명"
            android:textSize="22dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableLayout
            android:layout_width="200dp"
            android:layout_height="wrap_content">
            <TableRow
                android:padding="10dp">
                <TextView
                    android:id="@+id/text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:background="#FF8080"
                    android:text="왼쪽도수"
                    android:textSize="18dp"
                    android:layout_marginRight="10dp"/>
                <TextView
                    android:id="@+id/left"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="18dp" />
            </TableRow>
            <TableRow
                android:padding="10dp">
                <TextView
                    android:id="@+id/text1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#FF8080"
                    android:padding="10dp"
                    android:text="렌즈직경"
                    android:textSize="18dp"
                    android:layout_marginRight="10dp"/>
                <TextView
                    android:id="@+id/dia"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="18dp" />
            </TableRow>
            <TableRow
                android:padding="10dp">
                <TextView
                    android:id="@+id/text5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#FF8080"
                    android:padding="10dp"
                    android:text="렌즈색상"
                    android:textSize="18dp"
                    android:layout_marginRight="10dp"/>

                <TextView
                    android:id="@+id/color"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="18dp" />
            </TableRow>
        </TableLayout>
        <TableLayout
            android:layout_width="200dp"
            android:layout_height="wrap_content">
            <TableRow
                android:padding="10dp">
                <TextView
                    android:id="@+id/text-2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#FF8080"
                    android:padding="10dp"
                    android:text="오른쪽도수"
                    android:textSize="18dp"
                    android:layout_marginRight="10dp"/>

                <TextView
                    android:id="@+id/right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="18dp" />
            </TableRow>

            <TableRow
                android:padding="10dp">
                <TextView
                    android:id="@+id/text3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_x="219dp"
                    android:layout_y="290dp"
                    android:background="#FF8080"
                    android:padding="10dp"
                    android:text="렌즈함수율"
                    android:textSize="18dp"
                    android:layout_marginRight="10dp"/>

                <TextView
                    android:id="@+id/moisture"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_x="335dp"
                    android:layout_y="294dp"
                    android:text=""
                    android:textSize="18dp" />
            </TableRow>
            <TableRow
                android:padding="10dp">
                <TextView
                    android:id="@+id/text-1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_x="242dp"
                    android:layout_y="438dp"
                    android:background="#FF8080"
                    android:padding="10dp"
                    android:text="렌즈회사"
                    android:textSize="18dp"
                    android:layout_marginRight="10dp"/>


                <TextView
                    android:id="@+id/companyname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_x="338dp"
                    android:layout_y="440dp"
                    android:text=""
                    android:textSize="18dp" />
            </TableRow>
        </TableLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">
        <TextView
            android:id="@+id/text4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#FF8080"
            android:padding="10dp"
            android:text="렌즈가격"
            android:textSize="18dp"
            android:layout_marginRight="10dp"/>

        <TextView
            android:id="@+id/sale"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="18dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">
        <TextView
            android:id="@+id/text6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_x="244dp"
            android:layout_y="365dp"
            android:background="#FF8080"
            android:padding="10dp"
            android:text="렌즈기간"
            android:textSize="18dp"
            android:layout_marginRight="10dp"/>

        <TextView
            android:id="@+id/period"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_x="340dp"
            android:layout_y="367dp"
            android:text=""
            android:textSize="18dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">
        <TextView
            android:id="@+id/text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#FF8080"
            android:padding="10dp"
            android:text="렌즈베이스커브"
            android:textSize="18dp"
            android:layout_marginRight="10dp"/>

        <TextView
            android:id="@+id/bc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="18dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">
        <TextView
            android:id="@+id/text1-2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#FF8080"
            android:padding="10dp"
            android:text="렌즈그래픽직경"
            android:textSize="18dp"
            android:layout_marginRight="10dp"/>

        <TextView
            android:id="@+id/gdia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="18dp" />
    </LinearLayout>
</LinearLayout>